NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Database Password (for migrations)
# Get this from: Supabase Dashboard → Project Settings → Database → Database Password
SUPABASE_PASSWORD=your-database-password

# Optional: Cache revalidation secret
REVALIDATE_SECRET=dev-secret

SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AWS SES Configuration (for order notifications and custom design requests)
# Get these from AWS Console → IAM → Create Access Key
# Make sure to verify both sender and recipient emails in AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_SES_FROM_EMAIL=noreply@ezbox.mn
AWS_SES_ADMIN_EMAIL=admin@ezbox.mn
